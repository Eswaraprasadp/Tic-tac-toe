<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llTable"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid11"
                android:text="X"
                android:textSize="40sp"
                android:tag="0"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid12"
                android:text="X"
                android:textSize="40sp"
                android:tag="1"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid13"
                android:text="X"
                android:textSize="40sp"
                android:tag="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid21"
                android:text="X"
                android:textSize="40sp"
                android:tag="3"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid22"
                android:text="X"
                android:textSize="40sp"
                android:tag="4"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid23"
                android:text="X"
                android:textSize="40sp"
                android:tag="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid31"
                android:text="X"
                android:textSize="40sp"
                android:tag="6"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid32"
                android:text="X"
                android:textSize="40sp"
                android:tag="7"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/grid33"
                android:text="X"
                android:textSize="40sp"
                android:tag="8"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:text="Result"
        android:textColor="@color/perfectGreen"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:background="#7B9095"
        android:textColor="@color/perfectGreen"
        />

    </LinearLayout>

</ScrollView>